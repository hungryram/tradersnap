{
  "name": "trading-buddy-extension",
  "displayName": "Snapchart - Trading Psychology AI Coach",
  "version": "1.0.1",
  "description": "AI trading psychology coach. Analyze charts against your rules and build disciplined trading habits with real-time feedback.",
  "author": "Snapchart",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.39.3",
    "dompurify": "3.3.1",
    "marked": "17.0.1",
    "plasmo": "^0.84.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/chrome": "^0.0.258",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "tabs"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/icon.png",
          "assets/icon16.png",
          "assets/icon32.png",
          "assets/icon48.png",
          "assets/icon128.png"
        ],
        "matches": [
          "https://www.tradingview.com/*",
          "https://tradingview.com/*",
          "https://*.tradingview.com/*",
          "https://trader.tradovate.com/*",
          "https://*.tradovate.com/*",
          "https://*.tdameritrade.com/*",
          "https://*.ninjatrader.com/*",
          "https://*.tradestation.com/*",
          "https://www.binance.com/*",
          "https://*.binance.com/*",
          "https://www.coinbase.com/*",
          "https://*.coinbase.com/*",
          "https://www.kraken.com/*",
          "https://*.kraken.com/*",
          "https://*.bybit.com/*",
          "https://trade.tastytrade.com/*",
          "https://*.tastytrade.com/*",
          "https://*.tastyworks.com/*",
          "https://app.webull.com/*",
          "https://*.webull.com/*",
          "https://*.interactivebrokers.com/*",
          "https://*.schwab.com/*",
          "https://*.etrade.com/*",
          "https://*.fidelity.com/*",
          "https://*.robinhood.com/*",
          "https://*.topstepx.com/*",
          "https://*.rithmic.com/*",
          "https://*.thinkorswim.com/*",
          "https://*.metatrader4.com/*",
          "https://*.metatrader5.com/*",
          "https://*.ctrader.com/*",
          "https://*.tradier.com/*",
          "https://*.lightspeed.com/*",
          "https://*.speedtrader.com/*"
        ]
      }
    ]
  }
}
